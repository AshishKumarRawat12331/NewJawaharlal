<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_new"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:elevation="@dimen/_1sdp"
    android:backgroundTint="@color/white"
    android:id="@+id/headerContent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_16sdp"
             android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile"
            android:tint="@color/catgcol"
            android:layout_height="@dimen/_16sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_main_cat"
                android:textSize="14dp"
                 android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:id="@+id/title"
                android:paddingLeft="@dimen/_5sdp"
                android:textStyle="bold"
                  android:text="gdgg   ggdgd gdgdg dgg   g"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_main_cat"
                android:textSize="10dp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:id="@+id/comment_time"
                android:paddingLeft="@dimen/_5sdp"
                 android:text="gdgg   ggdgd gdgdg dgg   g"
                android:textColor="@color/light_grey" />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_below="@+id/rl_main_cat"
        android:textSize="13dp"
        android:layout_marginRight="@dimen/_4sdp"
         android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/comment_val"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Gdgg   ggdgd gdgdg dgg   g"
        android:textColor="@color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_below="@+id/rl_main_cat"
        android:textSize="12dp"
         android:drawableLeft="@drawable/ic_baseline_chat_24"
        android:drawablePadding="@dimen/_5sdp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/comment_view"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Comment"
        android:textColor="@color/colorPrimary" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment_reply"
        android:visibility="gone"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:padding="@dimen/_5sdp"
         android:scrollbars="vertical" />


    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/webviewdescription"></WebView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main_cat"
        android:textSize="10dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:id="@+id/description"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="ddddddddddddddddddkkkkdddddddddddddddddddddddddddddddddddddddddddgd gd g g gdg dg dgg   gg d gd gdg d gdgg   ggdgd gdgdg dgg   g"
        android:textColor="@color/grey_dot" />



</LinearLayout>