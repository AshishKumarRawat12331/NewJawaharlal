<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
     android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:elevation="@dimen/_1sdp"
    android:backgroundTint="@color/white"
    android:id="@+id/headerContent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_profile"
            android:tint="@color/catgcol"
            android:layout_height="@dimen/_15sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_main_cat"
                android:textSize="14dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:id="@+id/title"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:text="gdgg   ggdgd gdgdg dgg   g"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_main_cat"
                android:textSize="10dp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:id="@+id/comment_time"
                android:paddingLeft="@dimen/_5sdp"
                android:text="gdgg   ggdgd gdgdg dgg   g"
                android:textColor="@color/light_grey" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_gravity="right"
        android:gravity="right"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_below="@+id/rl_main_cat"
        android:textSize="12dp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:id="@+id/comment_val"
        android:text="Gdgg   ggdgd gdgdg dgg   g"
        android:textColor="@color/black" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/webviewdescription"></WebView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main_cat"
        android:textSize="10dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:id="@+id/description"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="ddddddddddddddddddkkkkdddddddddddddddddddddddddddddddddddddddddddgd gd g g gdg dg dgg   gg d gd gdg d gdgg   ggdgd gdgdg dgg   g"
        android:textColor="@color/grey_dot" />

</LinearLayout>