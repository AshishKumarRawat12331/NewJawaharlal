        android:id="@+id/title"
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="  gd g g gdg dg dgg   gg d gd gdg d gdgg   ggdgd gdgdg dgg   g"
        android:textColor="@color/black" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"

        android:id="@+id/webviewdescription"></WebView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main_cat"
        android:textSize="10dp"
        android:visibility="gone"

        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:id="@+id/description"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="ddddddddddddddddddkkkkdddddddddddddddddddddddddddddddddddddddddddgd gd g g gdg dg dgg   gg d gd gdg d gdgg   ggdgd gdgdg dgg   g"
