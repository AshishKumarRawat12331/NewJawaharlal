<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:background="@drawable/rectcart"
    android:elevation="@dimen/_1sdp"
    android:backgroundTint="@color/white"
    android:id="@+id/headerContent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:id="@+id/rl_main_cat">

            <RelativeLayout
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/top_shadow"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <ImageView
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/bottom_shadow"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent">

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:showYouTubeButton="false"
                        app:showSeekBar="false"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"
                        app:showVideoDuration="false"
                        app:showVideoCurrentTime="false" />

                </RelativeLayout>

                <ImageView
                    android:src="@drawable/rnd_logo"
                    android:id="@+id/imagecouress"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent" />

            </RelativeLayout>


        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_main_cat"
            android:textSize="10dp"
            android:maxLines="1"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:id="@+id/title"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="dgg   gg d gd gdg d gdgg   ggdgd gdgdg dgg   g"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/Ri_amount"
             android:layout_below="@+id/title"
             android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:maxLines="1"
                android:gravity="center"
                android:drawableTint="@color/student"
                android:drawableLeft="@drawable/ic_baseline_watch_later_24"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:id="@+id/time"
                android:textStyle="bold"
                android:text="   111111111"
                android:textColor="@color/student" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/amount"
                android:text=""
                android:gravity="center"
                android:drawableTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_baseline_account_balance_wallet_24"
                android:textColor="@color/black" />






        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>